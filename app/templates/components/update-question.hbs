{{#if updateQuestionForm}}
  <h4>Update {{question.query}} by {{question.author}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="query">Question</label>
        {{input value=query id="query" placeholder=question.query}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=question.imageurl}}
      </div>

      <div class="form-group">
        <label for="additional">Additional Information</label>
        {{input value=additional id="additional" placeholder=question.additional}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
