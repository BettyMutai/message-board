<h3><b>{{question.question}} by {{question.author}}</b></h3>
<br>
<p>{{question.additional}}</p>
<p><img src={{question.image}}></p>


<h3>Answers</h3>
<ul>
  {{#each question.answers as |answer|}}
    {{answer-tile answer=answer destroyAnswer="destroyAnswer"}}
  {{/each}}
</ul>

<button {{action 'delete' question}}>Delete</button>
