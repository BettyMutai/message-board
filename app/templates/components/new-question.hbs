{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="query">question</label>
        {{input value=query id="query"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image"}}
      </div>

      <div class="form-group">
        <label for="additional">Additional</label>
        {{input value=additional id="additional"}}
      </div>

      <button {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
