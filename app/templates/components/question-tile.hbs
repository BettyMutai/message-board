<li>
  {{question.question}} by {{question.author}}
  {{#if isImageShowing}}
    <p><img src={{question.image}} alt={{question.additional}} {{action 'imageHide'}}</p>
  {{else}}
    <button {{action 'imageShow'}}>Additional Information</button>
  {{/if}}
  {{update-question question=question update="update"}}
  <button {{action 'delete' question}}>Delete Question</button>
</li>
